//https://www.codewars.com/kata/588417e576933b0ec9000045
function seatsInTheater(nCols, nRows, col, row) {
  let numberCol = nCols - col + 1;
  let numberRow = nRows - row;
  return numberCol * numberRow;
}
//https://www.codewars.com/kata/589478160c0f8a40870000bc
function arrowArea(a,b) {
  let diagonal = ((a ** 2 + b ** 2) ** 0.5) / 2;
  let h = b / 2;
  return 0.5 * a * h;
}
