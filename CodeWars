//https://www.codewars.com/kata/572059afc2f4612825000d8a
function howManydays(month){
  var days;
  switch (month){
    case 1:
    case 3:
    case 5:
    case 7:
    case 8:
    case 10:
    case 12:
    days = 31; break;
    case 4:
    case 6:
    case 9:
    case 11:
    days = 30; break;
    default: days = 28;
  }
  return days;
}
//https://www.codewars.com/kata/5296455e4fe0cdf2e000059f
function calculate(num1, operation, num2) {
  switch(operation){
      case '+': return num1 + num2; break;
      case '-': return num1 - num2; break;
      case '*': return num1 * num2; break;
      case '/': return (num2 === 0) ? null : num1 / num2; break;
      default: return null;
  }
}
//https://www.codewars.com/kata/5810085c533d69f4980001cf
function calculator(a,b,sign){
  switch (sign){
      case '+': return (typeof a !== 'number' || typeof b !== 'number') ? 'unknown value' : a + b;
      case '-': return (typeof a !== 'number' || typeof b !== 'number') ? 'unknown value' : a - b;
      case '*': return (typeof a !== 'number' || typeof b !== 'number') ? 'unknown value' : a * b;
      case '/': return (typeof a !== 'number' || typeof b !== 'number' || b === 0) ? 'unknown value' : a / b;
      default: return 'unknown value';
  }
}
//////////////////////////////////////////////////////20200914/////////////////////////////////////////////////////////
//https://www.codewars.com/kata/558f9f51e85b46e9fa000025
function differenceOfSquares(n){
  let squareSum = 0;
  let sumSquares = 0;
  let i = 1;
  let j = 1;
  while(i <= n){
    squareSum += i;
    i++;
  }
  while (j <= n){
    sumSquares += j ** 2;
    j++;
  }
  return (squareSum ** 2) - sumSquares;
}
//https://www.codewars.com/kata/563f037412e5ada593000114
function calculateYears(principal, interest, tax, desired) {
  let count = 0;
  let resTax = 0;
  let res = 0;
  while(principal < desired) {
    resTax = principal * interest * tax;
    principal = (principal * (interest + 1)) - resTax;
    count++;
  }
  return count;
}
