function largestPower(n){
  let k = 0;
    while (3 ** k < n) {
      k++;
    }
  return k - 1;
}
//https://www.codewars.com/kata/58c9322bedb4235468000019
function isVeryEvenNumber(n) {
  let sumNum;
  while ( n >= 10) {
    n = n + '';
    sumNum = 0;
    for(let elm of n){
      sumNum = sumNum + +elm;
    }
    n = sumNum;
  }
  return (n % 2 === 0) ? true : false;
}
//https://www.codewars.com/kata/570a6a46455d08ff8d001002
function noBoringZeros(n) {
  while(n % 10 === 0 && n !== 0){
    n = n / 10;
  }
  return n;
}
//////////////////////////////////////////////////////20201011/////////////////////////////////////////////////////////
//https://www.codewars.com/kata/562f91ff6a8b77dfe900006e
function movie(card, ticket, perc) {
  let count = 0;
  let systemA = 0;
  let systemB = card;
  while (!(Math.ceil(systemB) < systemA)) {
    count++;
    systemB += ticket * Math.pow(perc, count);
    systemA += ticket;
  }
  return count;
};
//////////////////////////////////////////////////////20201018/////////////////////////////////////////////////////////
//https://www.codewars.com/kata/5b0d67c1cb35dfa10b0022c7
function squaresNeeded(grains){
  let sum = 0;
  let i = 1;
  let count = 0;
  while (sum < grains){
    sum = sum + i;
    i *= 2;
    count++;
  }
  return count;
}