function rainAmount(mm){
    if (mm < 40) return `You need to give your plant ${40 - mm}mm of water`;
    else return 'Your plant has had more than enough water for today!';
}
//https://www.codewars.com/kata/57a429e253ba3381850000fb
function bmi(weight, height) {
  if (weight / height ** 2 <= 18.5) return 'Underweight';
  if (weight / height ** 2 <= 25.0) return 'Normal';
  if (weight / height ** 2 <= 30.0) return 'Overweight';
  if (weight / height ** 2 > 30.0) return 'Obese';
}
