//https://www.codewars.com/kata/58e0bd6a79716b7fcf0013b1
function getAges(sum,difference){
  let oldest = ((sum - difference) / 2) + difference;
  let youngest = (sum - difference) / 2;
  if (sum < 0 || difference < 0 || oldest < 0 || youngest < 0) return null;
  else return [oldest, youngest];
};
