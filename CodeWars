//https://www.codewars.com/kata/5748838ce2fab90b86001b1a
function squareArea(A){
  let circleLength = A * 4;
  let radius = circleLength / (2 * Math.PI);
  return +(Math.pow(radius, 2)).toFixed(2);
}
//https://www.codewars.com/kata/59342039eb450e39970000a6
function oddCount(n){
  return Math.round((n - 1) / 2);
}
