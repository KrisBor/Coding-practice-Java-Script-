//https://www.codewars.com/kata/534ea96ebb17181947000ada
function breakChocolate(n,m) {
  return (n * m > 0) ? n * m - 1 : 0;
}
//https://www.codewars.com/kata/557b5e0bddf29d861400005d
function converter (mpg) {
  return +(mpg * 1.609344 / 4.54609188).toFixed(2);
}
//https://www.codewars.com/kata/55a75e2d0803fea18f00009d
function slope(points){
  if (points[2] - points[0] === 0) return 'undefined';
  else return (points[3] - points[1]) / (points[2] - points[0]) + '';
}
//https://www.codewars.com/kata/55f9bca8ecaa9eac7100004a
function past(h, m, s){
  return (h * 3600 + m * 60 + s) * 1000;
}

