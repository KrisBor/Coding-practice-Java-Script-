//https://www.codewars.com/kata/57e921d8b36340f1fd000059
function shark(pontoonDistance, sharkDistance, youSpeed, sharkSpeed, dolphin){
  if (dolphin === true && pontoonDistance / youSpeed < sharkDistance / (sharkSpeed / 2)) return 'Alive!';
  else if (dolphin === false && pontoonDistance / youSpeed < sharkDistance / sharkSpeed) return 'Alive!';
  else return 'Shark Bait!';
}
//https://www.codewars.com/kata/5672a98bdbdd995fad00000f
function rps(p1, p2) {
  if (p1 === 'scissors' && p2 === 'paper') return `Player 1 won!`;
  if (p1 === 'paper' && p2 === 'rock') return `Player 1 won!`;
  if (p1 === 'rock' && p2 === 'scissors') return `Player 1 won!`;
  if (p1 === p2) return 'Draw!';
  else return `Player 2 won!`;
};
//https://www.codewars.com/kata/568dcc3c7f12767a62000038
function setAlarm(employed, vacation){
  if (employed === false) return false;
  if (vacation === true) return false;
  else return true;
}
//https://www.codewars.com/kata/5ad0d8356165e63c140014d4
function finalGrade (exam, projects) {
  if (exam > 90 || projects > 10) return 100;
  if (exam > 75 && projects >= 5) return 90;
  if (exam > 50 && projects >= 2) return 75;
  else return 0;
}
//https://www.codewars.com/kata/53af2b8861023f1d88000832
function areYouPlayingBanjo(name) {
  return (name[0] === 'R' || name[0] === 'r') ? `${name} plays banjo` : `${name} does not play banjo`;
}

